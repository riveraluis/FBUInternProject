<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/ivProfilePicMessagePreview"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvMessagePreviewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bob Smith"
        android:textSize="21dp"
        android:layout_toEndOf="@+id/ivProfilePicMessagePreview"
        android:layout_above="@+id/tvLatestMessage"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvLatestMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi how are you today I saw that we have the same class on Tues?"
        android:layout_toEndOf="@+id/ivProfilePicMessagePreview"
        android:layout_alignBottom="@+id/ivProfilePicMessagePreview"
        android:layout_marginLeft="15dp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="17dp" />

</RelativeLayout>